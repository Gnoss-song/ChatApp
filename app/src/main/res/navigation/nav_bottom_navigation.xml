<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_bottom_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.chatapp.view.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.chatapp.view.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/hireFragment"
        android:name="com.example.chatapp.view.hire.HireFragment"
        android:label="fragment_hire"
        tools:layout="@layout/fragment_hire" />
    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.example.chatapp.view.mypage.MyPageFragment"
        android:label="fragment_my_page"
        tools:layout="@layout/fragment_my_page" />
    <fragment
        android:id="@+id/peopleFragment"
        android:name="com.example.chatapp.view.people.PeopleFragment"
        android:label="fragment_people"
        tools:layout="@layout/fragment_people" />
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment" />
    <action
        android:id="@+id/action_global_chatFragment"
        app:destination="@id/chatFragment" />
    <action
        android:id="@+id/action_global_peopleFragment"
        app:destination="@id/peopleFragment" />
    <action
        android:id="@+id/action_global_myPageFragment"
        app:destination="@id/myPageFragment" />
    <action
        android:id="@+id/action_global_hireFragment"
        app:destination="@id/hireFragment" />

</navigation>